{
  "type": "object",
  "additionalProperties": false,
  "required": ["meta", "spec"],
  "properties": {
    "meta": {
      "type": "object",
      "additionalProperties": false,
      "required": ["name", "kind"],
      "properties": {
        "kind": {
          "const": "daq-application"
        },
        "name": {
          "type": "string"
        },
        "owner": {
          "type": "string"
        }
      }
    },

    "spec": {
      "type": "object",
      "additionalProperties": false,
      "required": ["run-number", "configkey", "enabled", "desired-state"],
      "properties": {
        "run-number": {
          "type": "string"
        },
        "daq-service": {
          "type": "string"
        },
        "configkey": {
          "type": "string"
        },
        "enabled": {
          "type": "boolean"
        },
        "desired-state": {
          "type": "string",
          "enum": ["running"]
        }
      }
    },

    "status": {
      "type": "object"
    }
  }
}